@model petscare.Models.vets
@{
    ViewBag.Title = "VeterinaryLogin";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
<section style="text-align:center;" id="registration" class="container">
    <div style="text-align:center;" class="card-header">Giriş Yap<span> |</span> <span><a class="btn btn-xs btn-primary" href="/Veterinary/VeterinarySignUp">  Üye Ol</a></span></div>

    <br />

    @using (Html.BeginForm("VeterinaryLogin", "Veterinary", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <form class="center" role="form">
            <fieldset class="registration-form">
                <div class="form-group">
                    @Html.EditorFor(model => model.vets_username, new { htmlAttributes = new { @class = "form-control", placeholder = "Kullanıcı Adı", required = "required" } })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.vets_firstpassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre", required = "required", type = "password" } })
                </div>
                <div class="form-group">
                    <a class="text-danger">@Session["veterror"]</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Giriş Yap" class="btn btn-success btn-md btn-block" />
                </div>
                <div class="form-group">
                    <a href="#">Şifreni mi Unuttun?</a>
                </div>
            </fieldset>
        </form>



    }

</section>
