@model petscare.Models.vaccine_calendar

@{
    ViewBag.Title = "UserPetVaccineAdd";
}

<div style="background-color:white;padding:20px;border-radius:20px;">
    <h2 style="text-align:center;">Aşı Ekle</h2>
    <hr />
    @using (Html.BeginForm())
    {

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <div class="col-md-10">
                    Aşı Tarihi
                    @Html.EditorFor(model => model.vaccine_days, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vaccine_days, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    Aşı Adı
                    @Html.EditorFor(model => model.vaccine_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vaccine_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Aşı Ekle" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#vaccine_days").datepicker({
            dateFormat: "yy.mm.dd",
            monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
            dayNamesMin: ["Pzt", "Sl", "Çrş", "Prş", "Cm", "Cts", "Pzr"]
        });
    });
</script>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>