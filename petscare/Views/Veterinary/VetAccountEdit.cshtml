@model petscare.Models.vets

@{
    ViewBag.Title = "VetAccountEdit";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

<section id="services">
    <div class="container">
        <h2 style="text-align:center;">Bilgilerini Düzenle</h2>
        @using (Html.BeginForm())
        {


            <div class="form-horizontal">
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.vets_ID)

                <div class="form-group">
                    <div class="col-md-10">
                        Ad
                        @Html.EditorFor(model => model.vets_firstname, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                        @Html.ValidationMessageFor(model => model.vets_firstname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        Soyad
                        @Html.EditorFor(model => model.vets_lastname, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                        @Html.ValidationMessageFor(model => model.vets_lastname, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-10">
                        Kullanıcı Adı
                        @Html.EditorFor(model => model.vets_username, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                        @Html.ValidationMessageFor(model => model.vets_username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        Email
                        @Html.EditorFor(model => model.vets_email, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                        @Html.ValidationMessageFor(model => model.vets_email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        Telefon
                        @Html.EditorFor(model => model.vets_telephone, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                        @Html.ValidationMessageFor(model => model.vets_telephone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        Yaş
                        @Html.EditorFor(model => model.vets_age, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                        @Html.ValidationMessageFor(model => model.vets_age, "", new { @class = "text-danger" })
                    </div>
                </div>




                <div class="form-group">

                    <div class="col-md-10">
                        Şifre
                        @Html.EditorFor(model => model.vets_firstpassword, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                        @Html.ValidationMessageFor(model => model.vets_firstpassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        Şifre Tekrar
                        @Html.EditorFor(model => model.vets_passwordagain, new { htmlAttributes = new { @class = "form-control", @style = "width:300px;" } })
                        @Html.ValidationMessageFor(model => model.vets_passwordagain, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Düzenle" class="button" />
                    </div>
                </div>
            </div>
        }
    </div>
</section>