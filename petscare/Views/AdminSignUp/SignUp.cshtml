        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.admin_firstpassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre", required = "required", type = "password" } })
            @Html.ValidationMessageFor(model => model.admin_firstpassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.admin_againpassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre Tekrar", required = "required", type = "password" } })
            @Html.ValidationMessageFor(model => model.admin_againpassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.admin_email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", required = "required" } })
            @Html.ValidationMessageFor(model => model.admin_email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.admin_telephone, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefon", required = "required" } })
            @Html.ValidationMessageFor(model => model.admin_telephone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.admin_age, new { htmlAttributes = new { @class = "form-control", placeholder = "Yaş", required = "required" } })
            @Html.ValidationMessageFor(model => model.admin_age, "", new { @class = "text-danger" })
        </div>
    </div>

