@model petscare.Models.admin

@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "~/Views/Shared/AdminSignUpLayout.cshtml";
}


@using (Html.BeginForm()) 
{
   
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.admin_firstname, new { htmlAttributes = new { @class = "form-control", placeholder = "Ad", required = "required" } })
            @Html.ValidationMessageFor(model => model.admin_firstname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.admin_lastname, new { htmlAttributes = new { @class = "form-control", placeholder = "Soyad", required = "required" } })
