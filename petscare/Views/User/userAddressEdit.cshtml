@model petscare.Models.user_adress


@{
    ViewBag.Title = "Adres Düzenle";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}



<section id="services">
    <div class="container">
        <h2 style="text-align:center;">Adres Bilgilerini Düzenle</h2>
        @using (Html.BeginForm())
        {

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                @Html.HiddenFor(model => model.user_adressID)

                <div class="form-group" style="width:300px;">

                    <div class="col-md-10">
                        Ülke
                        @Html.EditorFor(model => model.user_country, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.user_country, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="width:300px;">

                    <div class="col-md-10">
                        İl
                        @Html.EditorFor(model => model.user_province, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.user_province, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="width:300px;">

                    <div class="col-md-10">
                        Adres
                        @Html.EditorFor(model => model.user_adress1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.user_adress1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="width:300px;">

                    <div class="col-md-10">
                        Posta Kodu
                        @Html.EditorFor(model => model.user_postcode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.user_postcode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Düzenle" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

</div></section>