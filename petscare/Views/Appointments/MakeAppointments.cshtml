@model petscare.Models.appointments

@{
    ViewBag.Title = "MakeAppointments";
}



<section id="services">
    <div class="container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Randevu Al</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

     

            <div class="form-group">

                <div class="col-md-10">
                    Tarih Seçin
                    @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", style = "width:250px;" } })
                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">

                <div class="col-md-10">
                    Dost Adı
                    @Html.EditorFor(model => model.pet_name, new { htmlAttributes = new { @class = "form-control", style = "width:250px;" } })
                    @Html.ValidationMessageFor(model => model.pet_name, "", new { @class = "text-danger" })
                </div>
            </div>







            <select name="vetsID">
                <option value="@Session["vetssID"]">Veteriner: @Session["vetsName"] @Session["vetsSurname"]</option>




            </select>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Randevu Al" class="btn btn-default" />
                </div>
            </div>
        </div>
        }
    </div>
</section>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#date").datepicker({
            dateFormat: "yy.mm.dd",
            monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
            dayNamesMin: ["Pzt", "Sl", "Çrş", "Prş", "Cm", "Cts", "Pzr"]
        });
    });
</script>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
