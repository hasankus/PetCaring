@model List<petscare.Models.ownage_notice>

@{
    ViewBag.Title = "Yuva Arayanlar";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
<section id="services">
    <div class="container">
        <h2 style="text-align:center;">Yuva Arayan Dostlarımız</h2>

        <table class="table" style="">
            
            @foreach (var item in Model)
            {
                <tr>
                    <td style="padding-right:20px;">
                        @if (item.ownagenotices_pictures.Count != 0)
                        {
                            <img style="width:100px;height:100px;margin:5px;" alt="" src="@item.ownagenotices_pictures.FirstOrDefault().notice_picturesextension" />
                        }
                        else
                        {
                            <img style="width:100px;height:100px;margin:5px;" alt="resim" src="" />

                        }
                    </td>
                    <td style="padding-right:20px;padding-top:30px;">
                        @Html.DisplayFor(modelItem => item.notice_title)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.notice_description)
                        </td>*@

                    <td style="padding-right:20px;padding-top:30px;">
                        @Html.DisplayFor(modelItem => item.notice_petname)
                    </td>
                    <td style="padding-right:20px;padding-top:30px;">
                        @Html.DisplayFor(modelItem => item.notice_petage)<span> Yaş</span>
                    </td>
                    <td style="padding-right:20px;padding-top:30px;">
                        @Html.DisplayFor(modelItem => item.notice_petgender)
                    </td>
                    <td style="padding-right:20px;padding-top:30px;">
                        @Html.DisplayFor(modelItem => item.pets_species.pets_speciesname)
                    </td>
                    <td style="padding-right:20px;padding-top:30px;">
                        @Html.DisplayFor(modelItem => item.pets_breed.pets_breedname)
                    </td>
                    <td style="padding-right:20px;padding-top:30px;">
                        @Html.DisplayFor(modelItem => item.notice_province)
                    </td>
                    @*<td style="padding-right:20px;padding-top:30px;">
                            @Html.DisplayFor(modelItem => item.user.user_firstname)
                        </td>*@
                    <td style="padding-right:20px;padding-top:30px;">
                        @Html.ActionLink("İlanı Görüntüle", "OwnageNoticeDetail", new { notice_ID = item.notice_ID }, new { style = "color:orange;" })
                    </td>
                </tr>
            }

        </table>
</div></section>
