                                        <div style="padding-left:270px;" class="item">
                                            <img width="615" height="350" src="@image.notice_picturesextension" />
                                        </div>
                                    }
                                </div>
                            </div>
                            <a class="prev hidden-xs" href="#main-slider" data-slide="prev">
                                <i><img style="width:25px;height:25px;" src="~/Content/Site/images/icons/left.png" /></i>
                            </a>
                            <a class="next hidden-xs" href="#main-slider" data-slide="next">
                                <i><img style="width:25px;height:25px;" src="~/Content/Site/images/icons/right-arrow.png" /></i>
                            </a>
                        </section>
