                            }
                            else
                            {
                                <img class="icon-windows icon-md" style="width:80px;height:80px;padding:10px;" src="~/Images/kedi2.png" />
                            }
                        </div>
                        <div class="media-body">
                            <h3 class="media-heading">Tüy Uzunlukları</h3>
                            <p>@item.pets_hairfigure</p>
                        </div>
                    </div>
                </div><!--/.col-md-4-->
            }
        </div><!--/.row-->
        <div class="gap"></div>
        <div class="row">
