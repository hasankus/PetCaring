@model IEnumerable<petscare.Models.pets>

@{
    ViewBag.Title = "Pet Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Pet Türü:
        <div class="col-md-10">
            <select name="pets_speciesID">
                @foreach (var species in ViewBag.pets_species)
                {
                    <option value="@species.pets_speciesID">@species.pets_speciesname</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        Pet Cinsi:
        <div class="col-md-10">
            <select name="pets_breedID">
                @foreach (var breed in ViewBag.pets_breed)
                {
                    <option value="@breed.pets_breedID">@breed.pets_breedname</option>
                }
            </select>
        </div>
    </div>

   


    @*<div class="form-group">
            @Html.LabelFor(model => model.pets_appearanceID, "pets_appearanceID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("pets_appearanceID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.pets_appearanceID, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </div>
</div>
    }

