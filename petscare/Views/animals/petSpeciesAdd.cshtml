@model petscare.Models.pets_species

@{
    ViewBag.Title = "Pet Türü Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm()) 
{

    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tür Adı:
            <div class="col-md-10">
                @Html.EditorFor(model => model.pets_speciesname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pets_speciesname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-default" />
            </div>
        </div>
    </div>
}

