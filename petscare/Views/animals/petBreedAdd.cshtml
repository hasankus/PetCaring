@model petscare.Models.pets_breed

@{
    ViewBag.Title = "Pet Cinsi Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("petBreedAdd", "animals", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <select name="pets_speciesID">
            @foreach (var species in ViewBag.pets_species)
            {
                <option value="@species.pets_speciesID">@species.pets_speciesname</option>
            }
        </select>
    </div>
    <div class="form-group">
        Cins Adı:
        <div class="col-md-10">
            @Html.EditorFor(model => model.pets_breedname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pets_breedname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Resim Ekle
        <div class="col-md-10">
            <input type="file" name="ImageFile" required>
        </div>
    </div>


    @*<div class="form-group">
            @Html.LabelFor(model => model.pets_breedpictureID, "pets_breedpictureID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("pets_breedpictureID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.pets_breedpictureID, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </div>
</div>
    }

