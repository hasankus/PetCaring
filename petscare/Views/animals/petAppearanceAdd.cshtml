            @Html.ValidationMessageFor(model => model.pets_origin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Karakter Açıklamaları:
        <div class="col-md-10">
            @Html.EditorFor(model => model.pets_characterdescription, new { htmlAttributes = new { @class = "form-control" } })
