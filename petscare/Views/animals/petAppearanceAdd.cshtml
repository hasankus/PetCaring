            @Html.LabelFor(model => model.pets_colors, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pets_colors, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pets_colors, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        Cins Açıklamaları:
        <div class="col-md-10">
            @Html.EditorFor(model => model.pets_breeddescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pets_breeddescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Boyut:
        <div class="col-md-10">
            @Html.EditorFor(model => model.pets_bodysize, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pets_bodysize, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ülke:
        <div class="col-md-10">
