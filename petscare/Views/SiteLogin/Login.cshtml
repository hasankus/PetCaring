@model petscare.Models.user
@{
    ViewBag.Title = "Pet Bakım | Login";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}


<section style="text-align:center;" id="registration" class="container">
    <div style="text-align:center;" class="card-header">Giriş Yap<span> |</span> <span><a class="btn btn-xs btn-primary" href="/SiteSignUp/SignUp">  Üye Ol</a></span></div>
    <br />
    @using (Html.BeginForm("Login", "SiteLogin", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        <form class="center" role="form">
            <fieldset class="registration-form">
                <div class="form-group">
                    @Html.EditorFor(model => model.user_email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", required = "required" } })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.user_firstpassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre", required = "required", type = "password" } })
                </div>
                <div class="form-group">
                    <a class="text-danger">@Session["error"]</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Giriş Yap" class="btn btn-success btn-md btn-block" />
                </div>
                <div class="form-group">
                    <a href="#">Şifreni mi Unuttun?</a>
                    <br />
                    <a href="/Veterinary/VeterinaryLogin">Veteriner Girişi</a>
                </div>
            </fieldset>
        </form>
    }
</section>

